# keygen - quick hack to make string-to-integer conversion easy in C, for
#  terminfo stuff

print <<ENDC;
/* this file is automatically generated - do not modify it */
#include <curses.h>
#include <string.h>

int curses_strtokey(char *str) {
ENDC
#for each line in the input
while(<>) {
    chop;
    print "    if(!strcmp(\"$_\",str)) return $_;\n";
}
print <<ENDC;
    return 0;
}
ENDC
